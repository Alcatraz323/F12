<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:id="@+id/leftLinearLayout1">
	<android.support.v7.widget.CardView
		app:cardCornerRadius="0dp"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		app:cardElevation="4dp"
		android:layout_marginBottom="4dp">
		
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="left|center">

		<ImageView
			android:layout_height="32dp"
			android:layout_width="32dp"
			android:layout_margin="16dp"
			android:id="@+id/leftImageView1"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceMedium"
				android:layout_width="wrap_content"
				android:text="-"
				android:id="@+id/leftTextView1"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:text="-"
				android:id="@+id/leftTextView8"/>

		</LinearLayout>

	</LinearLayout>
	</android.support.v7.widget.CardView>
	<android.support.v7.widget.CardView
		app:cardCornerRadius="0dp"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:layout_marginTop="8dp"
		app:cardElevation="4dp"
		android:layout_marginBottom="6dp">
		
	<LinearLayout
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:gravity="left|center"
		android:layout_margin="8dp">

		<ImageView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:src="@drawable/ic_pulse"
			android:layout_margin="16dp"/>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:orientation="vertical">

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="-"
					android:id="@+id/leftTextView2"
					android:layout_marginRight="16dp"/>

				<View
					android:background="?android:attr/dividerVertical"
					android:layout_height="1dp"
					android:layout_width="match_parent"/>

				<TextView
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_width="wrap_content"
					android:text="-"
					android:id="@+id/leftTextView3"/>

			</LinearLayout>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:text="-"
				android:id="@+id/leftTextView4"/>

			<TextView
				android:layout_height="wrap_content"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_width="wrap_content"
				android:text="-"
				android:id="@+id/leftTextView7"/>

		</LinearLayout>

	</LinearLayout>
	</android.support.v7.widget.CardView>
	<android.support.v7.widget.CardView
		app:cardCornerRadius="0dp"
		android:layout_marginTop="6dp"
		android:layout_height="wrap_content"
		android:layout_width="match_parent">
		
		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:orientation="vertical">
			
	<TextView
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_width="wrap_content"
		android:layout_margin="16dp"
		android:textColor="#000000"
		android:text="@string/l_7"/>

	<ExpandableListView
		android:divider="@null"
		android:layout_height="match_parent"
		app:cardElevation="6dp"
		android:layout_width="match_parent"
		android:id="@+id/leftExpandableListView1"/>
		</LinearLayout>
	</android.support.v7.widget.CardView>
</LinearLayout>

